.container
  %table.table.table-striped
    %h2 Edit profile
    %tbody
      %tr
        %td
          = form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: 'well form-horizontal',method: :put}) do |f|
            = render "devise/shared/error_messages", resource: resource
            .form-group
              %label.col-md-2.control-label
                = I18n.t('devise.first_name')
              .col-md-10.inputGroupContainer
                .input-group
                  %span.input-group-addon
                    %i.fa-solid.fa-t
                  = f.text_field :first_name, class: 'form-control'
            .form-group
              %label.col-md-2.control-label
                = I18n.t('devise.last_name')
              .col-md-10.inputGroupContainer
                .input-group
                  %span.input-group-addon
                    %i.fa-solid.fa-heading
                  = f.text_field :last_name, class: 'form-control'
            .form-group
              %label.col-md-2.control-label Email
              .col-md-10.inputGroupContainer
                .input-group
                  %span.input-group-addon
                    %i.fa-solid.fa-envelope
                  = f.email_field :email, class: 'form-control'
            .form-group
              %label.col-md-2.control-label
                = I18n.t('devise.pass_word')
              .col-md-10.inputGroupContainer
                .input-group
                  %span.input-group-addon
                    %i.fa-solid.fa-lock
                  = f.password_field :password, class: 'form-control'
                %i
                  = I18n.t('devise.leave_blank')
                  
            .form-group
              %label.col-md-2.control-label
                = I18n.t('devise.confirm_pass_word')
              .col-md-10.inputGroupContainer
                .input-group
                  %span.input-group-addon
                    %i.fa-solid.fa-key
                  = f.password_field :password_confirmation, class: 'form-control'
                %i
                  = I18n.t('devise.leave_blank')
            .form-group
              %label.col-md-2.control-label
                = I18n.t('devise.current_pass_word')
              .col-md-10.inputGroupContainer
                .input-group
                  %span.input-group-addon
                    %i.fa-solid.fa-lock
                  = f.password_field :current_password, class: 'form-control'
                - if @minimum_password_length
                  %br/
                  %em
                    = I18n.t('characters_minimum',minimun: @minimum_password_length)
            %div
              = f.submit I18n.t('save'), class: 'btn btn-new'
