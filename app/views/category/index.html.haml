.container
  .row
    .well
      %h1.text-center
        = I18n.t('my_category')
      %a.btn-new{href: new_category_path, role: "button"}
        = I18n.t('category.new_category')
      .cards_category
        - @categories.each do |category|
          .col-md-3.col-xs-5
            .card_content
              %a.card-category_link{:href => category_path(category)}
              %h4.card_heading.text-truncate-container
                = category.title
              .card_body.text-truncate
                %p
                  = category.content
              .card-category_tag-share-mode
                = share_mode_show(category.share_mode)
              .card-category_tag-count-article
                = @categories_with_article_count[category.id] || 0
                %i.fa-solid.fa-newspaper
              = link_to I18n.t('edit'), edit_category_path(category), class: "btn btn-default card-caterory_edit"
            
      = will_paginate @categories
